<%- contentFor('HeaderCss') %>
<%- contentFor('body') %>
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h3>Edit Product</h3>
            <form action="/update-product/<%= product.p_id %>"  method="post">
              
              <div class="mb-3">
                <label class="form-label" for="productname">Product Name</label>
                <input type="text" class="form-control" id="productname" name="p_name"  placeholder="Enter PName" value="<%= product.p_name %>" >
              </div>
              <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <input type="number" class="form-control" id="price" name="p_price" placeholder="Enter PPrice" value="<%= product.p_price %>" >
              </div>

              <div class="mb-3">
                <label for="size" class="form-label">Size</label>
                <select class="form-control" data-trigger name="p_size" id="p_size">
                  <option value="<%= product.p_size %>" >Select</option>
                  <option value="20">20 Gram</option>
                  <option value="50">50 Gram</option> 
                </select>
              </div>

              

              <div class="mb-3">
                <label class="form-label" for="Quantity">Quantity</label>
                <input id="Quantity" value="<%= product.Quantity %>"  name="Quantity" placeholder="Enter Quantity" type="number" class="form-control">
              </div>

              <div class="mb-3">
                <label class="form-label" for="discount_price">discount_price</label>
                <input id="discount_price" value="<%= product.discount_price %>"  name="discount_price" placeholder="Enter discount_price" type="number" class="form-control">
              </div>

              <div class="mb-3">
                <label class="form-label" for="productdesc">Product Description</label>
                <input id="productdesc" value="<%= product.p_description %>" name="p_description" placeholder="Enter Product Description" type="text" class="form-control">
              </div>

              <div class="mb-3">
                <label class="form-label" for="metatitle">Meta Title</label>
                <input id="metatitle" value="<%= product.meta_title %>"  name="meta_title" placeholder="Enter Title" type="text" class="form-control">
              </div>

              <div class="mb-3">
                <label class="form-label" for="metakeywords">Meta Keywords</label>
                <input id="metakeywords" name="meta_keywords" value="<%= product.meta_keywords %>"  placeholder="Enter Keywords" type="text" class="form-control">
              </div>

              <div class="mb-3">
                <label class="form-label" for="metadesc">Meta Description</label>
                <input id="metadesc" name="meta_description" value="<%= product.meta_description %>"  placeholder="Enter meta Description" type="text" class="form-control">
              </div>
              <button type="submit" class="btn btn-primary">Update Product</button>
            </form>
          </div>
        </div>
      </div>
    </div>
<%- contentFor('FooterJs') %>
